<Window x:Class="FlightManager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlightManager.Windows"
        Title="Flight Manager" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Открыть рейсы" Click="OpenFlightsWindow_Click" Width="200" Margin="10"/>
            <Button Content="Открыть пассажиров" Click="OpenPassengersWindow_Click" Width="200" Margin="10"/>
            <Button Content="Открыть билеты" Click="OpenTicketsWindow_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
